---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
---

<Layout title="Accueil" page="home">
  <Navigation />

  <div class="home-content">
    <h1 class="page-title">LEPAGE KÃ‰VIN</h1>
    <img src="/assets/portfolio.svg" class="portfolio" />
  </div>
</Layout>

<script>
  import gsap from 'gsap';
  import { hideEyesBackground } from '../lib/three-background';

  document.addEventListener('astro:page-load', () => {
    // Only hide eyes background if we're on the home page
    if (window.location.pathname === '/' || window.location.pathname === '') {
      hideEyesBackground();
    }

  });
</script>

<style>
  .home-content {
    height: 100vh;
    position: relative;
  }

  .page-title {
    position: absolute;
    left: 0.5%;
    z-index: 20;
    margin: 0;
    font-family: 'Bebas Neue', sans-serif;
    font-stretch: condensed;
    letter-spacing: 0.01em;
    transform: scaleX(0.45) translateZ(0);
    transform-origin: left;
    will-change: transform;
    text-transform: uppercase;
    color: #fff;
    font-size: clamp(100px, 2vw, 1vw);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
    pointer-events: none;
  }

  .portfolio {
    position: absolute;
    top: 50%;
    left: 0%;
    width: 100%;
    height: 80%;
    aspect-ratio: 1 / 1;
    transform: translateY(-50%);
    object-fit: contain;
    z-index: 10;
    opacity: 1;
  }

</style>
