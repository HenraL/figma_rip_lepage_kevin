---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
---

<Layout title="Accueil" page="home">
  <Navigation />

  <div class="home-content">
    <img src="/assets/logo.svg" alt="LEPAGE KÃ‰VIN" class="hero-logo" data-animate="title" />
  </div>
</Layout>

<script>
  import gsap from 'gsap';

  document.addEventListener('astro:page-load', () => {
    // Animate logo
    gsap.fromTo('.hero-logo',
      { opacity: 0, x: -50 },
      {
        opacity: 1,
        x: 0,
        duration: 0.8,
        ease: 'power3.out',
        delay: 0.3
      }
    );
  });
</script>

<style>
  .home-content {
    height: 100vh;
    position: relative;
  }

  .hero-logo {
    position: absolute;
    top: 22px;
    left: 67px;
    width: 732px;
    height: 317px;
    z-index: 20;
    opacity: 0;
  }

  @media (max-width: 1024px) {
    .hero-logo {
      width: 50vw;
      height: auto;
      left: 40px;
      top: 20px;
    }
  }

  @media (max-width: 768px) {
    .hero-logo {
      width: 70vw;
      left: 20px;
      top: 80px;
    }
  }
</style>
